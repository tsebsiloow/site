    <script>
        let currentVideoId = null, availableStreams = [], currentPlayMode = 'embed', isLoopEnabled = false;
        const streamAPIs = [{name: 'Invidious', servers: ['https://inv.perditum.com','https://inv.nadeko.net','https://invidious.nerdvpn.de','https://yewtu.be','https://invidious.f5.si'], getUrl: (s, v) => `${s}/api/v1/videos/${v}`, parseResponse: (d) => {let st = []; if(d.formatStreams) d.formatStreams.forEach(s => {if(s.url) st.push({url: s.url, quality: s.qualityLabel || s.quality || 'unknown', type: 'Invidious', hasAudio: true});}); if(d.adaptiveFormats) d.adaptiveFormats.forEach(s => {if(s.url && s.type && s.type.includes('video')) st.push({url: s.url, quality: s.qualityLabel || 'auto', type: 'Invidious', hasAudio: false});}); return st;}}, {name: 'Piped', servers: ['https://pipedapi.kavin.rocks','https://api-piped.mha.fi'], getUrl: (s, v) => `${s}/streams/${v}`, parseResponse: (d) => {if(!d.videoStreams) return []; return d.videoStreams.map(s => ({url: s.url, quality: s.quality, type: 'Piped', hasAudio: true}));}}];
        function toggleLoop() { isLoopEnabled = !isLoopEnabled; const btn = document.getElementById('btnLoop'); if(isLoopEnabled) { btn.textContent = 'ğŸ” ãƒªãƒ”ãƒ¼ãƒˆ: ON'; btn.style.background = 'linear-gradient(135deg, #4CAF50 0%, #388E3C 100%)'; } else { btn.textContent = 'ğŸ” ãƒªãƒ”ãƒ¼ãƒˆ: OFF'; btn.style.background = 'linear-gradient(135deg, #7b1fa2 0%, #4a148c 100%)'; } applyLoopToCurrentPlayer(); showInfo(`ãƒªãƒ”ãƒ¼ãƒˆå†ç”Ÿã‚’${isLoopEnabled ? 'ON' : 'OFF'}ã«ã—ã¾ã—ãŸ`); }
        function applyLoopToCurrentPlayer() { const p = document.getElementById('player'); if(currentPlayMode === 'stream') { if(p && p.tagName === 'VIDEO') p.loop = isLoopEnabled; } else { if(p && p.tagName === 'IFRAME' && currentVideoId) { let src = p.src.replace(/[&?]loop=\d+/, '').replace(/[&?]playlist=[^&]+/, ''); if(isLoopEnabled) src += `${src.includes('?') ? '&' : '?'}loop=1&playlist=${currentVideoId}`; p.src = src; } } }
        function toggleTheme() { document.body.classList.toggle('light-mode'); document.getElementById('themeToggle').textContent = document.body.classList.contains('light-mode') ? 'â˜€ï¸' : 'ğŸŒ™'; }
        document.addEventListener('DOMContentLoaded', () => { const sel = document.getElementById('apiKeySelect'), inp = document.getElementById('customKeyInput'); if(sel) sel.addEventListener('change', () => { inp.style.display = sel.value === 'custom' ? 'flex' : 'none'; }); });
        async function searchVideos() { const q = document.getElementById('searchQuery').value.trim(), sel = document.getElementById('apiKeySelect'), cst = document.getElementById('apiKey'); let key = sel.value === 'custom' ? cst.value.trim() : sel.value; const load = document.getElementById('loading'), err = document.getElementById('error'), inf = document.getElementById('info'), res = document.getElementById('results'); err.style.display = 'none'; inf.style.display = 'none'; res.innerHTML = ''; if(!q) { showError('æ¤œç´¢ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ã¾ãŸã¯URLã‚’å…¥åŠ›ã—ã¦ãã ã•ã„'); return; } const m = q.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\s]+)/); if(m) { playVideo(m[1], 'YouTubeå‹•ç”»'); return; } load.style.display = 'block'; showInfo('æ¤œç´¢ä¸­...'); if(key) { try { const r = await fetch(`https://www.googleapis.com/youtube/v3/search?part=snippet&maxResults=12&q=${encodeURIComponent(q)}&type=video&key=${key}`, {signal: AbortSignal.timeout(15000)}); if(r.ok) { const d = await r.json(); if(d.items && d.items.length > 0) { displayGoogleResults(d.items); load.style.display = 'none'; showInfo('âœ… YouTube Data API ã§æ¤œç´¢ã—ã¾ã—ãŸ'); return; } } } catch(e) { console.log('API error:', e); } } const invs = ['https://inv.perditum.com','https://inv.nadeko.net','https://yewtu.be']; for(const srv of invs) { try { const r = await fetch(`${srv}/api/v1/search?q=${encodeURIComponent(q)}&type=video`, {signal: AbortSignal.timeout(10000)}); if(r.ok) { const d = await r.json(); if(d && Array.isArray(d) && d.length > 0) { displayInvidiousResults(d); load.style.display = 'none'; showInfo('âœ… Invidious ã§æ¤œç´¢ã—ã¾ã—ãŸ'); return; } } } catch(e) { continue; } } displayPopularVideos(q); load.style.display = 'none'; showInfo('âš ï¸ äººæ°—å‹•ç”»ã‚’è¡¨ç¤ºã—ã¦ã„ã¾ã™'); }
        function displayPopularVideos() { const res = document.getElementById('results'), vids = [{id: 'dQw4w9WgXcQ', title: 'Rick Astley - Never Gonna Give You Up', channel: 'Rick Astley'},{id: 'kJQP7kiw5Fk', title: 'Luis Fonsi - Despacito', channel: 'Luis Fonsi'}]; vids.forEach(v => { const c = document.createElement('div'); c.className = 'video-card'; c.onclick = () => playVideo(v.id, v.title); c.innerHTML = `<img src="https://img.youtube.com/vi/${v.id}/mqdefault.jpg" alt="${v.title}"><div class="video-info"><div class="video-title">${v.title}</div><div class="video-channel">${v.channel}</div></div>`; res.appendChild(c); }); }
        function displayInvidiousResults(items) { const res = document.getElementById('results'); items.slice(0, 12).forEach(i => { if(!i.videoId) return; const c = document.createElement('div'); c.className = 'video-card'; c.onclick = () => playVideo(i.videoId, i.title); c.innerHTML = `<img src="https://img.youtube.com/vi/${i.videoId}/mqdefault.jpg" alt="${i.title}"><div class="video-info"><div class="video-title">${i.title || 'Video'}</div><div class="video-channel">${i.author || 'Unknown'}</div></div>`; res.appendChild(c); }); }
        function displayGoogleResults(items) { const res = document.getElementById('results'); items.forEach(i => { const c = document.createElement('div'); c.className = 'video-card'; c.onclick = () => playVideo(i.id.videoId, i.snippet.title); c.innerHTML = `<img src="${i.snippet.thumbnails.medium.url}" alt="${i.snippet.title}"><div class="video-info"><div class="video-title">${i.snippet.title}</div><div class="video-channel">${i.snippet.channelTitle}</div></div>`; res.appendChild(c); }); }
        function playVideo(vid, title) { currentVideoId = vid; availableStreams = []; const sec = document.getElementById('playerSection'), cur = document.getElementById('currentVideo'), btn = document.getElementById('btnStream'); sec.style.display = 'block'; cur.textContent = title; document.getElementById('playerContainer').innerHTML = `<iframe id="player" width="100%" height="100%" src="https://www.youtube.com/embed/${vid}?autoplay=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`; document.getElementById('streamUrl').textContent = `åŸ‹ã‚è¾¼ã¿å†ç”Ÿä¸­`; btn.disabled = true; btn.textContent = 'ğŸ¬ å–å¾—ä¸­...'; fetchStreamUrls(vid).then(st => { if(st.length > 0) { availableStreams = st; btn.disabled = false; btn.textContent = 'ğŸ¬ ã‚¹ãƒˆãƒªãƒ¼ãƒ å†ç”Ÿ'; showInfo('ã‚¹ãƒˆãƒªãƒ¼ãƒ å†ç”ŸãŒåˆ©ç”¨å¯èƒ½ã§ã™'); setPlayMode('stream'); } else { btn.disabled = true; btn.textContent = 'ğŸ¬ åˆ©ç”¨ä¸å¯'; } }).catch(() => { btn.disabled = true; btn.textContent = 'ğŸ¬ ã‚¨ãƒ©ãƒ¼'; }); sec.scrollIntoView({behavior: 'smooth', block: 'start'}); }
        async function fetchStreamUrls(vid) { for(const api of streamAPIs) { for(const srv of api.servers) { try { const r = await fetch(api.getUrl(srv, vid), {signal: AbortSignal.timeout(8000)}); if(!r.ok) continue; const d = await r.json(), st = api.parseResponse(d); if(st.length > 0) return st; } catch(e) { continue; } } } return []; }
        function setPlayMode(mode) { if(!currentVideoId) return; currentPlayMode = mode; const cont = document.getElementById('playerContainer'), url = document.getElementById('streamUrl'), qc = document.getElementById('qualityControls'); url.textContent = ''; qc.style.display = 'none'; if(mode === 'stream') { if(availableStreams.length === 0) { showError('ã‚¹ãƒˆãƒªãƒ¼ãƒ æƒ…å ±ãŒå–å¾—ã§ãã¦ã„ã¾ã›ã‚“'); return; } cont.innerHTML = '<video id="player" controls autoplay style="width:100%;height:100%;"></video>'; qc.style.display = 'grid'; createQualityButtons(); playBestQuality(); setTimeout(() => applyLoopToCurrentPlayer(), 100); return; } let emb = ''; if(mode === 'embed') { emb = `https://www.youtube.com/embed/${currentVideoId}?autoplay=1`; if(isLoopEnabled) emb += `&loop=1&playlist=${currentVideoId}`; url.textContent = 'åŸ‹ã‚è¾¼ã¿å†ç”Ÿ'; } else if(mode === 'nocookie') { emb = `https://www.youtube-nocookie.com/embed/${currentVideoId}?autoplay=1`; if(isLoopEnabled) emb += `&loop=1&playlist=${currentVideoId}`; url.textContent = 'No CookieåŸ‹ã‚è¾¼ã¿'; } cont.innerHTML = `<iframe id="player" width="100%" height="100%" src="${emb}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`; }
        function createQualityButtons() { const qc = document.getElementById('qualityControls'); qc.innerHTML = ''; const aud = availableStreams.filter(s => s.hasAudio), sort = aud.length > 0 ? aud : availableStreams; const getVal = (q) => { const s = String(q).toLowerCase(), m = s.match(/(\d+)/); if(m) return parseInt(m[1]); if(s.includes('max')) return 9999; if(s.includes('high')) return 1080; if(s.includes('medium')) return 720; return 0; }; const sorted = [...sort].sort((a, b) => getVal(b.quality) - getVal(a.quality)); sorted.forEach((st, i) => { const b = document.createElement('button'), api = st.type.substring(0, 4); b.textContent = `${st.quality} ${st.hasAudio ? 'ğŸ”Š' : 'ğŸ”‡'} [${api}]`; b.onclick = () => changeQualityByIndex(i); b.title = `${st.quality} - ${st.type}`; qc.appendChild(b); }); }
        function playBestQuality() { changeQualityByIndex(0); }
        function changeQualityByIndex(idx) { const aud = availableStreams.filter(s => s.hasAudio), sort = aud.length > 0 ? aud : availableStreams; const getVal = (q) => { const s = String(q).toLowerCase(), m = s.match(/(\d+)/); if(m) return parseInt(m[1]); if(s.includes('max')) return 9999; if(s.includes('high')) return 1080; return 0; }; const sorted = [...sort].sort((a, b) => getVal(b.quality) - getVal(a.quality)); if(idx >= sorted.length) return; const sel = sorted[idx], qc = document.getElementById('qualityControls'), btns = qc.querySelectorAll('button'); btns.forEach((b, i) => { b.classList.toggle('active', i === idx); }); playStream(sel); }
        function playStream(st) { const p = document.getElementById('player'), url = document.getElementById('streamUrl'); if(!st || !st.url) { showError('ã‚¹ãƒˆãƒªãƒ¼ãƒ ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—'); return; } p.src = st.url; p.play().catch(() => showError('å†ç”Ÿã«å¤±æ•—')); url.textContent = `ç”»è³ª: ${st.quality} | API: ${st.type} ${st.hasAudio ? 'ğŸ”Š' : 'ğŸ”‡'}`; }
        async function downloadVideo(type) { if(!currentVideoId) { showError('å‹•ç”»ãŒé¸æŠã•ã‚Œã¦ã„ã¾ã›ã‚“'); return; } const btnV = document.getElementById('btnDownloadVideo'), btnA = document.getElementById('btnDownloadAudio'); btnV.disabled = true; btnA.disabled = true; btnV.textContent = 'â³ å‡¦ç†ä¸­...'; btnA.textContent = 'â³ å‡¦ç†ä¸­...'; try { let url = null; if(availableStreams.length > 0) { const st = availableStreams.find(s => s.hasAudio) || availableStreams[0]; if(st) url = st.url; } if(!url) { const st = await fetchStreamUrls(currentVideoId); if(st.length > 0) { const s = st.find(x => x.hasAudio) || st[0]; url = s.url; } } if(url) { const a = document.createElement('a'); a.href = url; a.download = `${currentVideoId}.${type === 'audio' ? 'mp3' : 'mp4'}`; a.target = '_blank'; document.body.appendChild(a); a.click(); document.body.removeChild(a); showInfo('ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ã‚’é–‹å§‹ã—ã¾ã—ãŸ'); } else { throw new Error('URLå–å¾—å¤±æ•—'); } } catch(e) { showError('ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ'); } finally { btnV.disabled = false; btnA.disabled = false; btnV.textContent = 'ğŸ“¥ å‹•ç”»DL'; btnA.textContent = 'ğŸµ éŸ³å£°DL'; } }
        function showError(msg) { const e = document.getElementById('error'); e.textContent = msg; e.style.display = 'block'; setTimeout(() => { e.style.display = 'none'; }, 5000); }
        function showInfo(msg) { const i = document.getElementById('info'); i.textContent = msg; i.style.display = 'block'; setTimeout(() => { i.style.display = 'none'; }, 3000); }
